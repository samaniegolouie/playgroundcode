Category Archive
<?php
function dynamic_title_dropdown_shortcode() {

  if (!is_category()) return '';

  $category = get_queried_object();

  $posts = get_posts([
    'post_type'      => 'post',
    'posts_per_page' => -1,
    'cat'            => $category->term_id,
    'orderby'        => 'title',
    'order'          => 'ASC',
    'post_status'    => 'publish',
  ]);

  if (!$posts) return '';

  ob_start();
  ?>
  <select id="titleFilter">
    <option value="">Select job title</option>

    <?php foreach ($posts as $post): ?>
      <option value="<?php echo esc_url(get_permalink($post->ID)); ?>">
        <?php echo esc_html($post->post_title); ?>
      </option>
    <?php endforeach; ?>

  </select>

  <script>
  document.addEventListener('DOMContentLoaded', function () {
    const select = document.getElementById('titleFilter');
    if (!select) return;

    select.addEventListener('change', function () {
      if (this.value) {
        window.location.href = this.value;
      }
    });
  });
  </script>
  <?php

  return ob_get_clean();
}
add_shortcode('dynamic_title_dropdown', 'dynamic_title_dropdown_shortcode');

?>
====================================================================================
Post Type content Accounting
<?php
add_shortcode('job_accordion', function() {
    // 1. Get the current category slug automatically from the URL
    // This detects if you are on /category/operations/ or /category/accounting/
    $current_cat = get_query_var('category_name');

    // 2. Check for the specific post title search parameter
    $url_title = isset($_GET['post_title']) ? sanitize_text_field($_GET['post_title']) : '';

    $args = [
        'post_type'      => 'post',
        'category_name'  => $current_cat, // Dynamic Category Detection
        'posts_per_page' => -1,
        'post_status'    => 'publish'
    ];

    // 3. Filter by title if the URL has ?post_title=...
    if ( !empty($url_title) ) {
        $args['title'] = $url_title;
    }

    $query = new WP_Query($args);

    if (!$query->have_posts()) {
        return '<p>No job postings found in this section.</p>';
    }

    $output = '<div class="job-listing-wrapper">';
    while ($query->have_posts()) {
        $query->the_post();
        
        $trimmed_content = wp_trim_words(get_the_content(), 20, '...'); 
        
        $output .= '
        <details class="job-item" ' . (!empty($url_title) ? 'open' : '') . '>
            <summary class="job-header">
                <div class="info">
                    <h2 class="job-title">' . get_the_title() . '</h2>
                </div>
                <div class="actions">
                    <div class="arrow-circle"></div>
                    <a href="' . get_permalink() . '" class="btn-view">View Details</a>
                </div>
            </summary>
            <div class="description">
                ' . $trimmed_content . '
            </div>
        </details>';
    }
    $output .= '</div>';
    
    wp_reset_postdata();
    return $output;
});
?>
