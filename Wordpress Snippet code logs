Post url end point
<?php
/**
 * 1️⃣ Category dropdown with post count
 * Redirects to /category/{slug}/
 */
function category_dropdown_with_count() {
  $cats = get_categories([
    'hide_empty' => true,
    'exclude' => get_cat_ID('Uncategorized')
  ]);

  $out = '<select id="categorySelect">';
  $out .= '<option value="">Select category</option>';

  foreach ($cats as $cat) {
    $out .= '<option value="' . esc_url(get_category_link($cat)) . '">';
    $out .= esc_html($cat->name) . ' (' . esc_html($cat->count) . ')';
    $out .= '</option>';
  }

  $out .= '</select>';

  $out .= "
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const select = document.getElementById('categorySelect');
      if (select) {
        select.addEventListener('change', function () {
          if (this.value) window.location.href = this.value;
        });
      }
    });
  </script>";

  return $out;
}
add_shortcode('category_dropdown', 'category_dropdown_with_count');


/**
 * 2️⃣ Elementor Custom Query
 * Filters posts by TITLE using ?post_title=
 */
add_action('elementor/query/filter_by_title', function ($query) {
  if (!empty($_GET['post_title'])) {
    $query->set('s', sanitize_text_field($_GET['post_title']));
  }
});

?>
